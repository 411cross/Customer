<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/NurseIcon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字"
        android:textSize="30dp"
        android:id="@+id/NurseNameD"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/NurseIcon"
        android:layout_toRightOf="@+id/NurseIcon"
        android:layout_toEndOf="@+id/NurseIcon"
        android:layout_marginTop="8dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NurseNameD"
        android:layout_marginTop="11dp"
        android:layout_alignLeft="@+id/NurseNameD"
        android:layout_alignStart="@+id/NurseNameD"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:id="@+id/NurseSex"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="#909090"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:id="@+id/NurseAge"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="#909090"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:id="@+id/NurseArea"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:layout_alignTop="@+id/NurseNameD"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/NursePrice"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好评率："
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginTop="15dp"
        android:id="@+id/NurseEvaluateD" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="护理范围"
        android:id="@+id/textView2"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/NurseIcon"
        android:layout_alignLeft="@+id/NurseIcon"
        android:layout_alignStart="@+id/NurseIcon"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toLeftOf="@+id/NurseEvaluateD"
        android:layout_toStartOf="@+id/NurseEvaluateD"
        android:id="@+id/textView3" />

</RelativeLayout>