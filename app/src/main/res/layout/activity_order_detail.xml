<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peek_mapdemotest.nurseapp.Activity.OrderDetailActivity"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/background"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/order_status"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号：20170627094200"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已付款"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/order_id"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="被护理人" />

    <TextView
        android:id="@+id/textPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:text="牛大力" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPatient"
        android:layout_marginTop="10dp"
        android:layout_marginStart="11dp"
        android:text="床       位" />

    <TextView
        android:id="@+id/textBadNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PG10086"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="6dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/background"
        android:layout_below="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="联  系  人" />

    <TextView
        android:id="@+id/textLinkman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:text="牛上天"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="联系电话" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLinkman"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:text="18819266666"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        android:text="护理类型" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:text="外科护理" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="护理时间" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="2016.06.06 06:06 - 2017.06.06 06:06"
        />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/background"
        android:layout_below="@+id/textView13" />

    <ImageView
        android:id="@+id/imageHeadPortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/touxiang"
        android:layout_below="@+id/imageView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageHeadPortrait"
        android:layout_toEndOf="@+id/imageHeadPortrait"
        android:layout_marginStart="20dp"
        android:text="护工姓名" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="10dp"
        android:text="放牛娃"
        android:layout_alignTop="@+id/textView4" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageHeadPortrait"
        android:layout_marginStart="20dp"
        android:text="评        价" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="8dp"
        android:text="身高" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="体重" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textView18"
        android:layout_marginStart="20dp"
        android:text="血型" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/background"
        android:layout_below="@+id/imageHeadPortrait" />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00b0ff"
        android:textSize="20sp"
        android:text="已 付 款"
        android:textColor="#ffffff"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/buttonContact"
        />


    <Button
        android:id="@+id/buttonContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系我们"
        android:background="#00b0ff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
