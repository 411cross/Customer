    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignBottom="@+id/relativeLayout3"
        android:layout_alignParentTop="true"
        ></android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"></LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/type_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="省心预约" />

    <Button
        android:id="@+id/NurseListBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00b0ff"
        android:text="护工"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/viewPager"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/neike"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/NurseListBt"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:background="@mipmap/waike"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/NurseListBt"
        android:layout_alignRight="@+id/CheckOrder"
        android:layout_alignEnd="@+id/CheckOrder" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="18dp"
        android:background="@mipmap/linshi"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/NurseListBt"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/standard_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/biaozhun"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/serious_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/zhongzheng"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/standard_btn"
        android:layout_alignBottom="@+id/standard_btn"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <!--<TextView-->
        <!--android:id="@+id/textView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginTop="28dp"-->
        <!--android:layout_toRightOf="@+id/imageButton"-->
        <!--android:text="用户编号" />-->


    <ImageView

        android:id="@+id/imageView11"
        android:layout_width="280sp"
        android:layout_height="51sp"
        app:srcCompat="@mipmap/button1"
        android:layout_below="@+id/standard_btn"
        android:layout_alignLeft="@+id/type_tag"
        android:layout_alignStart="@+id/type_tag"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/CheckOrder"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:background="#00b0ff"
        android:text="   查询订单   "
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageView11"
        android:layout_toLeftOf="@+id/NurseListBt"
        android:layout_toStartOf="@+id/NurseListBt" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#00b0ff00"
        android:text="   添加病人   "
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignRight="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

</RelativeLayout>

    </ScrollView>
</RelativeLayout>
